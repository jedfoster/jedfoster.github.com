doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

    title= title

    - if(description)
      - var attributes = {content: description};
      meta(name='description')&attributes(attributes)

    meta(name='author' lang='en' content='Jed Foster')
    link(rel='author' href='/humans.txt')

    meta(name='viewport' content='width=device-width, initial-scale=1.0')

    link(rel='shortcut icon' href='/favicon.ico')
    link(rel='apple-touch-icon-precomposed' href='/apple-touch-icon-precomposed.png')
    link(rel='apple-touch-icon-precomposed' sizes='72x72' href='/apple-touch-icon-72x72-precomposed.png')
    link(rel='apple-touch-icon-precomposed' sizes='114x114' href='/apple-touch-icon-114x114-precomposed.png')


    link(rel='stylesheet' href='/css/styles.css')
    - if(css)
      = css
    script(src='/js/modernizr.js')

  body(class=('pg-' + title.toLowerCase()))
    div.container
      header
        h1
          a(href='/') Jed Foster

        h2
          span Code. 
          span Design. 
          span For the web.

        nav
          != partial('_navigation')

      div#main(role='main')
        != yield

      div#sidebar
        != partial('_sidebar')

    - if(javascript)
      = javascript

    script
      var _gaq=[['_setAccount','UA-24822554-1'],['_trackPageview'],['_setDomainName', '.jedfoster.com']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];g.async=1;
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));

